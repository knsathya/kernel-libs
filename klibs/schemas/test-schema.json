{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "Kernel test schema",
    "type": "object",
    "properties": {
        "static-config": {
            "type": "object",
            "properties": {
                "enable": {
                    "description": "Enable static analysis",
                    "type": "boolean",
                    "default": false
                },
                "test-list": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "arch_name"
                        ],
                        "properties": {
                            "arch_name": {
                                "description": "ARCH name used for compilation",
                                "enum": [
                                    "x86_64",
                                    "i386",
                                    "arm64"
                                ]
                            },
                            "compiler_options": {
                                "description": "Compiler Options",
                                "type": "object",
                                "properties": {
                                    "CC": {
                                        "type": "string",
                                        "default": ""
                                    },
                                    "cflags": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "default": []
                                    }
                                },
                                "default": {
                                    "CC": "",
                                    "cflags": []
                                }
                            },
                            "allyesconfig": {
                                "$ref": "#/definitions/static-tests"
                            },
                            "allmodconfig": {
                                "$ref": "#/definitions/static-tests"
                            },
                            "allnoconfig": {
                                "$ref": "#/definitions/static-tests"
                            },
                            "defconfig": {
                                "$ref": "#/definitions/static-tests"
                            },
                            "randconfig": {
                                "$ref": "#/definitions/static-tests"
                            },
                            "customconfigs": {
                                "type": "array",
                                "items": {
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/static-tests"
                                        },
                                        {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "description": "Name of the custom config"
                                                },
                                                "source": {
                                                    "type": "string",
                                                    "description": "Custom config source file"
                                                },
                                                "defaction": {
                                                    "type": "string",
                                                    "enum": [
                                                        "oldconfig",
                                                        "olddefconfig"
                                                    ],
                                                    "default": "olddefconfig"
                                                }
                                            }
                                        }
                                    ]
                                },
                                "default": []
                            }
                        }
                    }
                }
            }
        },
        "checkpatch-config": {
            "type": "object",
            "properties": {
                "enable": {
                    "description": "Enable checkpatch static analysis",
                    "type": "boolean",
                    "default": false
                },
                "source": {
                    "description": "Checkpatch script path",
                    "type": "string",
                    "default": "scripts/checkpatch.pl"
                }
            }
        }
    },
    "default": {
        "static-config": {
            "enable": false,
            "test-list": [
                {
                    "arch_name": "x86_64"
                },
                {
                    "arch_name": "i386"
                },
                {
                    "arch_name": "arm64"
                }
            ]
        },
        "checkpatch-config": {
            "enable": false
        }
    },
    "definitions": {
        "static-tests": {
            "type": "object",
            "properties": {
                "compile-test": {
                    "description": "Enable allyesconfig compilation",
                    "type": "boolean",
                    "default": false
                },
                "smatch-test": {
                    "description": "Enable allyesconfig smatch test",
                    "type": "boolean",
                    "default": false
                },
                "sparse-test": {
                    "description": "Enable allyesconfig sparse test",
                    "type": "boolean",
                    "default": false
                }
            },
            "default": {
                "compile-test": false,
                "smatch-test": false,
                "sparse-test": false
            }
        }
    }
}